{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/",
  "monorepo": true,
  "root": "apps/ms-client-gateway",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/ms-client-gateway/tsconfig.app.json"

  },
  "projects": {
    "ms-client-gateway": {
      "type": "application", 
      "root": "apps/ms-client-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/ms-client-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-client-gateway/tsconfig.build.json"
      }
    },
    "ms-usuarios": {
      "type": "application", 
      "root": "apps/ms-usuarios",
      "entryFile": "main",
      "sourceRoot": "apps/ms-usuarios/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-usuarios/tsconfig.build.json"
      }
    },
    "ms-productos": {
      "type": "application", 
      "root": "apps/ms-productos",
      "entryFile": "main",
      "sourceRoot": "apps/ms-productos/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-productos/tsconfig.app.json"
      }
    },
    "ms-orders": {
      "type": "application", 
      "root": "apps/ms-orders",
      "entryFile": "main",
      "sourceRoot": "apps/ms-orders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-orders/tsconfig.app.json"
      }
    },
    "ms-tables": {
      "type": "application", 
      "root": "apps/ms-tables",
      "entryFile": "main",
      "sourceRoot": "apps/ms-tables/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-tables/tsconfig.app.json"
      }
    },
    "ms-auth": {
      "type": "application", 
      "root": "apps/ms-auth",
      "entryFile": "main",
      "sourceRoot": "apps/ms-auth/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/ms-auth/tsconfig.json"
      }
    },
    "ms-qr-codes": {
      "type": "application", 
      "root": "apps/ms-qr-codes",
      "entryFile": "main",
      "sourceRoot": "apps/ms-qr-codes/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-qr-codes/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  } 
}
